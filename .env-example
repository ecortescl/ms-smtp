# Puerto del servidor Express
PORT=3000

# Token de autenticación para la API (requerido)
API_TOKEN=pon-un-token-seguro-aqui

# Configuración SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
# true para puerto 465 (TLS implícito) o según tu servidor
SMTP_SECURE=false
# Usuario/clave (si el servidor requiere auth)
SMTP_USER=usuario
SMTP_PASS=clave

# Remitente por defecto si no se envía en el payload
SMTP_FROM_DEFAULT="Nombre <no-reply@example.com>"

# Opciones avanzadas (valores por defecto razonables)
SMTP_POOL=true
SMTP_MAX_CONNECTIONS=5
SMTP_MAX_MESSAGES=100
# Rechazar certificados no válidos (prod: true)
SMTP_TLS_REJECT_UNAUTH=true

# Swagger / Docs
# Optional: change Swagger UI mount path (default: /docs)
SWAGGER_PATH=/docs

# Logging
# Directorio (relativo al proyecto o absoluto) donde se guardarán los logs JSONL
LOG_DIR=./data/logs
# Nombre del archivo de logs
LOG_FILE_NAME=email.log

# Templates
# Directorio donde se almacenarán las plantillas (archivos .json)
TEMPLATES_DIR=./data/templates

# Base de Datos (opcional)
# Para habilitar Postgres: DB_PROVIDER=postgres
# Si falla la conexión o no está configurado, se hará fallback automático a filesystem
DB_PROVIDER=filesystem

# Opción 1: cadena de conexión completa (prioritaria si está definida)
# PG_CONNECTION_STRING=postgresql://usuario:clave@localhost:5432/ms_smtp?sslmode=disable

# Opción 2: parámetros discretos
PG_HOST=localhost
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=
PG_DATABASE=ms_smtp
PG_SSL=false
