# Puerto del servidor Express
PORT=3000

# Token de autenticación para la API (requerido)
API_TOKEN=pon-un-token-seguro-aqui

# Configuración SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
# true para puerto 465 (TLS implícito) o según tu servidor
SMTP_SECURE=false
# Usuario/clave (si el servidor requiere auth)
SMTP_USER=usuario
SMTP_PASS=clave

# Remitente por defecto si no se envía en el payload
SMTP_FROM_DEFAULT="Nombre <no-reply@example.com>"

# Opciones avanzadas (valores por defecto razonables)
SMTP_POOL=true
SMTP_MAX_CONNECTIONS=5
SMTP_MAX_MESSAGES=100
# Rechazar certificados no válidos (prod: true)
SMTP_TLS_REJECT_UNAUTH=true

# Logging
# Directorio (relativo al proyecto o absoluto) donde se guardarán los logs JSONL
LOG_DIR=./data/logs
# Nombre del archivo de logs
LOG_FILE_NAME=email.log

# Templates
# Directorio donde se almacenarán las plantillas (archivos .json)
TEMPLATES_DIR=./data/templates
