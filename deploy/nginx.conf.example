# Ejemplo de configuración Nginx para exponer ms-smtp detrás de un reverse proxy
# Ajusta server_name, rutas y upstream según tu entorno.

user nginx;
worker_processes auto;

events {
  worker_connections 1024;
}

http {
  include       mime.types;
  default_type  application/octet-stream;
  sendfile        on;
  keepalive_timeout  65;

  # Upstream hacia la app Node (ajusta host/puerto)
  upstream ms_smtp_upstream {
    server 127.0.0.1:3003; # PORT de la app en el host
  }

  server {
    listen 80;
    server_name smtp.example.com; # cambia por tu dominio

    # (Opcional) redirigir a HTTPS si tienes TLS en otra capa
    # return 301 https://$host$request_uri;

    # Proxy de Swagger UI: importante usar ^~ para evitar que otras reglas capturen /docs/
    location ^~ /docs/ {
      proxy_pass http://ms_smtp_upstream;
      proxy_http_version 1.1;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
    }

    # API protegida por token
    location /api/ {
      proxy_pass http://ms_smtp_upstream;
      proxy_http_version 1.1;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Health check
    location = /health {
      proxy_pass http://ms_smtp_upstream;
    }

    # 404 para cualquier otro recurso no manejado
    location / {
      return 404;
    }
  }

  # Bloque HTTPS (plantilla) - descomenta y configura certificados
